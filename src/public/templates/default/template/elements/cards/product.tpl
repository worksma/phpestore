<div class="col-lg-4 mb-4">
	<div class="card">
		<div class="card-header">{name}</div>
		<div class="card-body-img preImage preHide d-flex align-items-center justify-content-center" data-src="{image}">
			<button class="btn" onclick="get_product2({id});"><i class="fas fa-eye"></i></button>
		</div>
		<div class="card-footer">
			<div class="description">
